@model List<VMBudgetPlan>?

@{
    Layout = null;
}

<div class="card">
    <div class="card-body">
        <p>Are you sure you want to delete this budget plan?</p>
        @if (Model != null && Model.Count > 0)
        {
            <ul>
            @foreach(var item in Model)
            {
                <li>
                    <span class="fw-bold plan-name" data-id="@item.Id">@item.PlanName</span>
                </li>
            }
            </ul>
        }
    </div>
    <div class="card-footer d-flex justify-content-evenly">
        <button class="btn btn-outline-primary" data-bs-dismiss="modal">Cancel</button>
        <button id="btnDelete" class="btn btn-danger">Delete</button>
    </div>
</div>

<script>
    $(document).ready(() => {
        $("#staticModalLabel").text("@ViewBag.Title")

        $("#btnDelete").click(function (e) {
            e.preventDefault()

            let plans = $("span.plan-name")
            let plansId = []

            for (let i = 0; i < plans.length; i++) {
                plansId.push($(plans[i]).data("id"))
            }

            $.ajax({
                url: "/BudgetPlan/DeleteBudgetPlan",
                type: "post",
                data: {
                    id: plansId.join(",")
                },
                dataType: "json",
                beforeSend: () => { },
                success: function (res) {
                    if (res.statusCode == 200) {
                        toastr.success(res.message)
                        setTimeout(function () {
                            location.reload();
                        }, 1500);
                    } else {
                        toastr.error(res.message)
                    }
                },
                error: function (errRes) {
                    console.error(errRes)
                    debugger
                }
            })
        })
    })
</script>
